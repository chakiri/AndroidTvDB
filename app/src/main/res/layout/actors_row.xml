<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/actor_src"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/actor_real_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/actor_src"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/actor_src"
        android:textColor="@color/orange"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/actor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/actor_real_name"
        android:layout_below="@+id/actor_real_name"
        android:textColor="@color/grey" />

</RelativeLayout>